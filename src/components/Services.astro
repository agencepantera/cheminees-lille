---
const services = [
    {
        title: "Installation",
        description: "Installation professionnelle de cheminées sur mesure selon vos besoins",
        image: "/images/installation-insert-cheminee.webp",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>`
    },
    {
        title: "Rénovation",
        description: "Modernisation et rénovation de cheminées existantes",
        image: "/images/renovation-cheminee-lille.webp",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"/>
        </svg>`
    },
    {
        title: "Entretien",
        description: "Maintenance régulière et nettoyage professionnel",
        image: "/images/entretien-cheminee-metropole.webp",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>`
    },
    {
        title: "Conseil",
        description: "Expertise et conseils personnalisés pour votre projet",
        image: "/images/conduit-cheminee-inspection.webp",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
        </svg>`
    }
];
---

<section id="services" class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12 md:mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Nos Services</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
                Des solutions complètes pour votre cheminée, de l'installation à l'entretien
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
            {services.map((service) => (
                <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
                    <div class="relative h-48 overflow-hidden">
                        <img 
                            src={service.image} 
                            alt={service.title}
                            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                        <h3 class="absolute bottom-4 left-4 text-xl font-semibold text-white">{service.title}</h3>
                    </div>
                    <div class="p-6">
                        <div class="w-16 h-16 mb-6 mx-auto" set:html={service.icon} />
                        <p class="text-gray-600 text-center">{service.description}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
