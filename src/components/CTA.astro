---
const ctas = [
    {
        title: "Installation & Rénovation",
        description: "Cheminées, Poêles à bois et Inserts",
        image: "/images/installation-insert-cheminee.webp",
        features: [
            "Installation de cheminées sur mesure",
            "Pose de poêles à bois et granulés",
            "Installation d'inserts haute performance",
            "Rénovation d'installations existantes",
            "Mise aux normes et sécurisation",
            "Devis gratuit et personnalisé"
        ],
        badge: "Service Premium"
    },
    {
        title: "Ramonage Professionnel",
        description: "Entretien et Maintenance Préventive",
        image: "/images/entretien-cheminee-metropole.webp",
        features: [
            "Ramonage certifié et garanti",
            "Inspection vidéo des conduits",
            "Nettoyage et désencrassage complet",
            "Vérification des joints et de l'étanchéité",
            "Certificat de ramonage conforme",
            "Conseils d'entretien personnalisés"
        ],
        badge: "Obligatoire 1×/an"
    }
];
---

<section class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Nos Services Principaux</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
                Des solutions professionnelles pour votre confort et votre sécurité
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-7xl mx-auto">
            {ctas.map((cta) => (
                <div class="relative group overflow-hidden rounded-3xl shadow-xl bg-white">
                    <!-- Image Header -->
                    <div class="relative h-64 overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/90 to-gray-900/70 z-10"></div>
                        <img 
                            src={cta.image}
                            alt={cta.title}
                            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                        />
                        <!-- Badge -->
                        <div class="absolute top-4 right-4 z-20">
                            <span class="px-4 py-2 bg-orange-500 text-white text-sm font-semibold rounded-full">
                                {cta.badge}
                            </span>
                        </div>
                        <!-- Titre sur l'image -->
                        <div class="absolute bottom-0 left-0 right-0 p-6 z-20">
                            <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">{cta.title}</h3>
                            <p class="text-lg text-gray-200">{cta.description}</p>
                        </div>
                    </div>

                    <!-- Contenu -->
                    <div class="p-6 md:p-8">
                        <!-- Features -->
                        <ul class="space-y-4 mb-8">
                            {cta.features.map((feature) => (
                                <li class="flex items-start text-gray-700">
                                    <svg class="w-5 h-5 text-orange-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    <span>{feature}</span>
                                </li>
                            ))}
                        </ul>

                        <!-- CTA Buttons -->
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a
                                href="#contact"
                                class="flex-1 inline-flex items-center justify-center px-6 py-3 bg-orange-600 hover:bg-orange-700 text-white font-medium rounded-xl transition-colors duration-200 group"
                            >
                                Demander un devis
                                <svg 
                                    class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" 
                                    fill="none" 
                                    stroke="currentColor" 
                                    viewBox="0 0 24 24"
                                >
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </a>
                            <a
                                href="tel:+33320XXXXXX"
                                class="flex-1 inline-flex items-center justify-center px-6 py-3 border-2 border-orange-600 text-orange-600 hover:bg-orange-50 font-medium rounded-xl transition-colors duration-200"
                            >
                                <svg 
                                    class="w-5 h-5 mr-2" 
                                    fill="none" 
                                    stroke="currentColor" 
                                    viewBox="0 0 24 24"
                                >
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                Nous appeler
                            </a>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
.group:hover .group-hover\:scale-105 {
    transform: scale(1.05);
}
</style>
