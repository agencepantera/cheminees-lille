---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const title = "Contact | Cheminées Lille";
const description = "Contactez Cheminées Lille pour tous vos projets d'installation, rénovation ou entretien de cheminées. Devis gratuit et conseil personnalisé.";
---

<Layout title={title} description={description}>
    <Navigation />
    <!-- Hero Section -->
    <section class="relative bg-gray-900 text-white py-24 md:py-32">
        <div class="absolute inset-0 bg-[url('/images/contact-hero.jpg')] bg-cover bg-center opacity-40"></div>
        <div class="relative container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-6 text-center">Contactez-nous</h1>
            <p class="text-xl text-center max-w-3xl mx-auto">
                Notre équipe est à votre disposition pour répondre à toutes vos questions
            </p>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 md:py-24">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-2 gap-12">
                <!-- Contact Form -->
                <div class="bg-white p-8 rounded-lg shadow-lg">
                    <h2 class="text-2xl font-bold mb-6">Envoyez-nous un message</h2>
                    <form id="contact-form" class="space-y-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nom complet</label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                placeholder="Votre nom"
                            />
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                placeholder="votre@email.com"
                            />
                        </div>
                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Téléphone</label>
                            <input
                                type="tel"
                                id="phone"
                                name="phone"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                placeholder="06 12 34 56 78"
                            />
                        </div>
                        <div>
                            <label for="service" class="block text-sm font-medium text-gray-700 mb-1">Service souhaité</label>
                            <select
                                id="service"
                                name="service"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                            >
                                <option value="">Sélectionnez un service</option>
                                <option value="installation">Installation</option>
                                <option value="renovation">Rénovation</option>
                                <option value="entretien">Entretien</option>
                                <option value="conseil">Conseil</option>
                            </select>
                        </div>
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                            <textarea
                                id="message"
                                name="message"
                                required
                                rows="4"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                placeholder="Décrivez votre projet..."
                            ></textarea>
                        </div>
                        <button
                            type="submit"
                            class="w-full bg-orange-500 text-white py-3 px-6 rounded-lg hover:bg-orange-600 transition-colors duration-300"
                        >
                            Envoyer le message
                        </button>
                    </form>
                </div>

                <!-- Contact Info -->
                <div class="space-y-8">
                    <div>
                        <h2 class="text-2xl font-bold mb-6">Informations de contact</h2>
                        <div class="space-y-4">
                            <div class="flex items-start space-x-4">
                                <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center shrink-0">
                                    <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold mb-1">Adresse</h3>
                                    <p class="text-gray-600">123 Rue des Cheminées<br/>59000 Lille, France</p>
                                </div>
                            </div>
                            <div class="flex items-start space-x-4">
                                <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center shrink-0">
                                    <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold mb-1">Téléphone</h3>
                                    <p class="text-gray-600">03 20 12 34 56</p>
                                </div>
                            </div>
                            <div class="flex items-start space-x-4">
                                <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center shrink-0">
                                    <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-semibold mb-1">Email</h3>
                                    <p class="text-gray-600">contact@cheminees-lille.fr</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h2 class="text-2xl font-bold mb-6">Horaires d'ouverture</h2>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Lundi - Vendredi</span>
                                <span class="font-semibold">9h00 - 18h00</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Samedi</span>
                                <span class="font-semibold">9h00 - 12h00</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Dimanche</span>
                                <span class="font-semibold">Fermé</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 md:py-24 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-bold mb-8">Notre localisation</h2>
            <div class="h-[400px] rounded-lg overflow-hidden shadow-lg">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2530.9028986862074!2d3.0573!3d50.6311!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTDCsDM3JzUyLjAiTiAzwrAwMyczNC4yIkU!5e0!3m2!1sfr!2sfr!4v1620000000000!5m2!1sfr!2sfr"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                ></iframe>
            </div>
        </div>
    </section>
    <Footer />
</Layout>

<script>
document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Récupération des données du formulaire
    const formData = new FormData(e.target as HTMLFormElement);
    const data = Object.fromEntries(formData);
    
    // Ici, vous pouvez ajouter la logique d'envoi du formulaire
    console.log('Données du formulaire:', data);
    
    // Exemple de message de succès (à personnaliser selon vos besoins)
    alert('Votre message a été envoyé avec succès ! Nous vous recontacterons dans les plus brefs délais.');
    
    // Réinitialisation du formulaire
    (e.target as HTMLFormElement).reset();
});
</script>
